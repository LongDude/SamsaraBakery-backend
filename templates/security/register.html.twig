{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                {% if app.user %}
                    <div class="mb-3">
                        Вы авторизованы как {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Выйти</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal text-center">Пожалуйста зарегистрируйтесь</h1>
                {{ form_start(registrationForm, {'attr': {'class': 'mt-5'}}) }}
                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.email, 'Почта') }}
                        {{ form_widget(registrationForm.email, {
                            'attr': {
                                'class': 'form-control',
                                'autocomplete': 'email',
                                'required': 'required',
                                'autofocus': 'autofocus'
                            }
                        }) }}
                    </div>
                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.plainPassword, 'Пароль') }}
                        {{ form_widget(registrationForm.plainPassword, {
                            'attr': {
                                'class': 'form-control',
                                'autocomplete': 'new-password',
                                'required': 'required'
                            }
                        }) }}
                    </div>
                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.username, 'Имя пользователя') }}
                        {{ form_widget(registrationForm.username, {
                            'attr': {
                                'class': 'form-control',
                                'required': 'required'
                            }
                        }) }}
                    </div>

                    <button class="btn btn-lg btn-primary w-100" type="submit">
                        Зарегистрироваться
                    </button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
