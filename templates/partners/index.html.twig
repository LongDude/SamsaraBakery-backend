{% extends 'base.html.twig' %}

{% block title %}Partners index{% endblock %}

{% block body %}
    <h1>Partners index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firmname</th>
                <th>Address</th>
                <th>Contact_number</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td>{{ partner.id }}</td>
                <td>{{ partner.firmname }}</td>
                <td>{{ partner.address }}</td>
                <td>{{ partner.contactNumber }}</td>
                <td>
                    <a href="{{ path('app_partners_show', {'id': partner.id}) }}">show</a>
                    <a href="{{ path('app_partners_edit', {'id': partner.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_partners_new') }}">Create new</a>
{% endblock %}
