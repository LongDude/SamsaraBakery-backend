<div id="twigHTMLContainer">
<table id="dynamic-table">
</table>
<button id="add-item-btn" class="btn btn-success mb-2">Добавить товар</button>

<!-- Модальное окно для добавления/редактирования -->
<div class="modal fade" id="itemModal" tabindex="-1" aria-labelledby="itemModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form id="item-form">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="itemModalLabel">Товар</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="item-id">
          <div class="mb-3">
            <label for="item-name" class="form-label">Наименование</label>
            <input type="text" class="form-control" id="item-name" required>
          </div>
          <div class="mb-3">
            <label for="item-quantity" class="form-label">Количество на складе</label>
            <input type="number" class="form-control" id="item-quantity" step="0.01" required>
          </div>
          <div class="mb-3">
            <label for="item-cost" class="form-label">Стоимость продукции</label>
            <input type="number" class="form-control" id="item-cost" step="0.01" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
          <button type="submit" class="btn btn-primary" id="save-item-btn">Сохранить</button>
        </div>
      </div>
    </form>
  </div>
</div>
</div>

<script type="text/javascript" src="{{ path('admin_table_products_js') }}"></script>