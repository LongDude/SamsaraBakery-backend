{% macro render_table(config) %}
<div class="table-container" data-table-config='{{ config|json_encode|raw }}'>
    {# Search Section #}
    <div class="search-container mb-3">
        <input type="text" 
               class="form-control search-input" 
               placeholder="Поиск..."
               data-endpoint="{{ config.search_endpoint }}"
               data-delay="300">
        <div class="search-results d-none"></div>
    </div>

    {# Table Section #}
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    {% for column in config.columns %}
                        <th class="sortable" data-sort="{{ column.field }}">
                            {{ column.label|default(column.field|title) }}
                            {% if column.sortable %}
                                <i class="fas fa-sort"></i>
                            {% endif %}
                        </th>
                    {% endfor %}
                    {% if config.actions %}
                        <th>Действия</th>
                    {% endif %}
                </tr>
            </thead>
            <tbody>
                {% for item in config.items %}
                    <tr data-id="{{ item.id }}">
                        {% for column in config.columns %}
                            <td class="{{ column.editable ? 'editable' : '' }}" 
                                data-field="{{ column.field }}"
                                data-type="{{ column.type|default('text') }}">
                                {{ attribute(item, column.field)|default('') }}
                            </td>
                        {% endfor %}
                        {% if config.actions %}
                            <td>
                                {% for action in config.actions %}
                                    <button class="btn btn-sm btn-{{ action.type|default('secondary') }}"
                                            data-action="{{ action.name }}"
                                            data-id="{{ item.id }}">
                                        <i class="fas fa-{{ action.icon }}"></i>
                                    </button>
                                {% endfor %}
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {# Pagination Section #}
    {% if config.pagination %}
        <nav aria-label="Page navigation" class="mt-3">
            <ul class="pagination justify-content-center">
                <li class="page-item {{ config.pagination.current_page == 1 ? 'disabled' : '' }}">
                    <a class="page-link" href="#" data-page="{{ config.pagination.current_page - 1 }}">Предыдущая</a>
                </li>
                
                {% for page in 1..config.pagination.total_pages %}
                    <li class="page-item {{ page == config.pagination.current_page ? 'active' : '' }}">
                        <a class="page-link" href="#" data-page="{{ page }}">{{ page }}</a>
                    </li>
                {% endfor %}
                
                <li class="page-item {{ config.pagination.current_page == config.pagination.total_pages ? 'disabled' : '' }}">
                    <a class="page-link" href="#" data-page="{{ config.pagination.current_page + 1 }}">Следующая</a>
                </li>
            </ul>
        </nav>
    {% endif %}
</div>
{% endmacro %} 