{% macro render_table(config) %}
    <div class="table-container" data-table-config="{{ config|json_encode|e('html_attr') }}">
        {# Search Section #}
        <div class="search-section mb-3">
            <div class="input-group">
                <input type="text" class="form-control search-input" placeholder="Поиск..." data-endpoint="{{ config.search_endpoint }}">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
            <div class="search-results d-none"></div>
        </div>

        {# Table #}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        {% for column in config.columns %}
                            <th class="{% if column.sortable %}sortable{% endif %}" {% if column.sortable %}data-field="{{ column.field }}"{% endif %}>
                                {{ column.label }}
                                {% if column.sortable %}
                                    <i class="fas fa-sort"></i>
                                {% endif %}
                            </th>
                        {% endfor %}
                        {% if config.actions is defined and config.actions|length > 0 %}
                            <th>Действия</th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for item in config.items %}
                        <tr data-id="{{ item.id }}">
                            {% for column in config.columns %}
                                <td class="{% if column.editable %}editable{% endif %}" 
                                    {% if column.editable %}
                                        data-field="{{ column.field }}"
                                        data-type="{{ column.type }}"
                                    {% endif %}>
                                    {% if column.value is defined %}
                                        {% set value = item %}
                                        {% for property in column.value|split('.') %}
                                            {% set value = value.get(property) %}
                                        {% endfor %}
                                        {{ value }}
                                    {% else %}
                                        {{ item.get(column.field) }}
                                    {% endif %}
                                </td>
                            {% endfor %}
                            {% if config.actions is defined and config.actions|length > 0 %}
                                <td>
                                    <div class="btn-group">
                                        {% for action in config.actions %}
                                            <button class="btn btn-sm btn-{{ action.type|default('secondary') }}" 
                                                    data-action="{{ action.name }}"
                                                    data-id="{{ item.id }}">
                                                <i class="fas fa-{{ action.icon }}"></i>
                                            </button>
                                        {% endfor %}
                                    </div>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {# Pagination #}
        {% if config.pagination is defined and config.pagination.total_pages > 1 %}
            <nav aria-label="Page navigation" class="mt-3">
                <ul class="pagination justify-content-center">
                    {% if config.pagination.current_page > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="#" data-page="{{ config.pagination.current_page - 1 }}">Предыдущая</a>
                        </li>
                    {% endif %}

                    {% for i in 1..config.pagination.total_pages %}
                        <li class="page-item {% if i == config.pagination.current_page %}active{% endif %}">
                            <a class="page-link" href="#" data-page="{{ i }}">{{ i }}</a>
                        </li>
                    {% endfor %}

                    {% if config.pagination.current_page < config.pagination.total_pages %}
                        <li class="page-item">
                            <a class="page-link" href="#" data-page="{{ config.pagination.current_page + 1 }}">Следующая</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        {% endif %}
    </div>

    <style>
        .editable:hover {
            background-color: #f8f9fa;
            cursor: pointer;
        }
        .search-results {
            position: absolute;
            z-index: 1000;
            background: white;
            border: 1px solid #ddd;
            border-radius: 4px;
            max-height: 200px;
            overflow-y: auto;
            width: 100%;
        }
        .result-item {
            padding: 8px 12px;
            cursor: pointer;
        }
        .result-item:hover {
            background-color: #f8f9fa;
        }
        .search-wrapper {
            position: relative;
        }
        .btn-group {
            display: flex;
            gap: 0.25rem;
        }
    </style>
{% endmacro %} 